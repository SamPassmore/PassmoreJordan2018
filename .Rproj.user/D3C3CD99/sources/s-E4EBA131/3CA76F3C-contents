kinship_to_colours = function(codes){
  library(plyr)
  mapvalues(codes, from = 1:8, 
            to = c(
              "#E41A1C",
              "#377EB8",
              "#4DAF4A", 
              "#984EA3",
              "#FF7F00",
              "#FFFF33", 
              "#A65628",
              "#F781BF"
            )
  )
}