reconstruction_pretty = function(fit){
  ape_root = fit$ape$models[[fit$ape$best_model]]$lik.anc[1,]
  rrm_root = fit$rrm$models[[fit$rrm$best_model]]$marginal.anc[1,]
  
  ape_model = fit$ape$models[[fit$ape$best_model]]$call$model
  rrm_model = fit$rrm$models[[fit$rrm$best_model]]$model
  
  list(ape = list(root = ape_root, model = ape_model), 
       rrm = list(root = rrm_root, model = rrm_model))
}
